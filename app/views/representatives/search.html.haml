= link_to 'Home', root_path, class: 'btn btn-primary mt-3'

.container-fluid
    .row
        .col-md-8.offset-md-2
            .table-responsive-md.pt-5
                %table.table.table-striped.table-hover#events
                    %caption Table of Representatives
                    %thead.thead-dark
                        %tr
                            %th Name
                            %th Office
                            %th Party
                            %th News
                            %th Profile
                    %tbody
                        - @representatives.each_with_index do |rep, _index|
                            %tr
                                %td= rep.name
                                %td= rep.title
                                %td= rep.political_party
                                %td
                                    = link_to representative_news_items_path(rep.id), class: 'btn btn-primary' do
                                        %i.fas.fa-newspaper
                                        News Articles
                                %td
                                    = form_tag(representative_path(rep), method: :get) do
                                        = hidden_field_tag :representative_name, rep.name
                                        = submit_tag 'Profile', class: 'btn btn-primary'
